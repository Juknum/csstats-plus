{
	"manifest_version": 3,
	"name": "CSStats Plus",
	"version": "1.2.0",
	"description": "Enhances the CSStats website",
	"permissions": [],
	"host_permissions": ["https://csstats.gg/*"],
	"content_scripts": [
		{
			"matches": ["https://csstats.gg/*", "https://csgostats.gg/cs2"],
			"js": ["index.js"],
			"css": ["styles.css"],
			"type": "module",
			"run_at": "document_idle"
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}